# MongoDB Configuration
# Leave commented out to use in-memory database for development
# MONGO_URI=mongodb://localhost:27017/wasteland_rpg

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Server Configuration
PORT=3000
NODE_ENV=development

# Torn API Configuration
TORN_API_KEY=your_torn_api_key_here

# Torn API Rate Limit (requests per minute, default: 60)
# Set lower if needed to avoid hitting rate limits
TORN_RATE_LIMIT=60

# Curiosity Rate for adaptive monitoring (default: 0.05 = 5%)
# Percentage of API budget reserved for random checks of quiet items
CURIOSITY_RATE=0.05

# Market History Aggregation Schedule (cron format, default: 0 0 * * * = daily at midnight UTC)
# This job aggregates MarketSnapshot data into daily summary records
HISTORY_AGGREGATION_CRON=0 0 * * *

# Include ItemsSold data in API responses (default: false)
# Set to true to return the ItemsSold array for debugging purposes
INCLUDE_ITEMS_SOLD=false

# Optional: MongoDB Atlas connection (cloud database)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/wasteland_rpg