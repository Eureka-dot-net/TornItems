# MongoDB Configuration
# Leave commented out to use in-memory database for development
# MONGO_URI=mongodb://localhost:27017/wasteland_rpg

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Server Configuration
PORT=3000
NODE_ENV=development

# Torn API Configuration
TORN_API_KEY=your_torn_api_key_here

# Enable/disable background jobs (default: true)
# Set to false to disable all scheduled background jobs (data fetching, monitoring, etc.)
ENABLE_BACKGROUND_JOBS=true

# Torn API Rate Limit (requests per minute, default: 60)
# Set lower if needed to avoid hitting rate limits
TORN_RATE_LIMIT=60

# Curiosity Rate for adaptive monitoring (default: 0.05 = 5%)
# Percentage of API budget reserved for random checks of quiet items
CURIOSITY_RATE=0.05

# Market History Aggregation Schedule (cron format, default: 0 * * * * = hourly)
# This job aggregates MarketSnapshot data into summary records
HISTORY_AGGREGATION_CRON=0 * * * *

# Include ItemsSold data in API responses (default: false)
# Set to true to return the ItemsSold array for debugging purposes
INCLUDE_ITEMS_SOLD=false

# Discord Webhook Configuration (Legacy - still supported)
# Discord webhook URL for market price alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
# Your Discord user ID for mentions in alerts
MY_DISCORD_USER_ID=1234567890
# Discord Bot Secret for authenticating Discord bot requests (legacy)
BOT_SECRET=your_discord_bot_secret_here

# Discord Bot Configuration (New - Required for bot features)
# Discord bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here
# Discord application/client ID from Discord Developer Portal
DISCORD_CLIENT_ID=your_discord_client_id_here
# Optional: Discord guild/server ID for instant command registration during testing
# Leave empty for global command registration (takes up to 1 hour)
DISCORD_GUILD_ID=your_discord_guild_id_here
# Optional: Discord channel ID for travel notifications (fallback if DM fails)
DISCORD_TRAVEL_CHANNEL_ID=your_travel_channel_id_here

# Market Watch Configuration
# Maximum number of items a user can watch (default: 5)
MAX_WATCHES_PER_USER=5

# Optional: MongoDB Atlas connection (cloud database)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/wasteland_rpg

# Encryption Configuration
# Secret key used to encrypt sensitive data like API keys
# Generate a strong random key in production (e.g., using openssl rand -base64 32)
ENCRYPTION_SECRET=change_this_to_a_strong_random_secret_in_production