{
  "manifest_version": 3,
  "name": "Torn Chain Call",
  "version": "2.2.1",
  "description": "Plan and estimate Torn chaining calls and inject the UI into torn.com pages.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.torn.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.torn.com/*"],
      "js": ["content.js"],
      "css": ["inject.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
